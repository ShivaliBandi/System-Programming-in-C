build:
	gcc program.c -o program

clean:
	rm program

help:
	@echo 'Use as make build'
	
run:
	./program ${ARGS}
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																														
